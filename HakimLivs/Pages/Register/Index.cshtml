@page
@model HakimLivs.Pages.Register.IndexModel
@{
	ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>


<div class="row">
	<div class="col-md-4 ">
		<form method="post" asp-page-handler="Add">
				@if (!string.IsNullOrEmpty(Model.Message))
				{
						<label class="alert">@Model.Message</label>
						<br />
				}
			<div class="d-block">
				<h2>Skapa nytt konton.</h2>
				<hr />
			</div>

			<div class="form-floating">
				<input type="email" asp-for="AppUser.Email" class="form-control" autocomplete="username" aria-required="true" />
				<label asp-for="AppUser.Email">Email</label>
				<span asp-validation-for="AppUser.Email" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<input asp-for="AppUser.FirstName" class="form-control" autocomplete="username" aria-required="true" />
				<label asp-for="AppUser.FirstName">Förnamn</label>
				<span asp-validation-for="AppUser.FirstName" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<input asp-for="AppUser.LastName" class="form-control" autocomplete="username" aria-required="true" />
				<label asp-for="AppUser.LastName">Efternamn</label>
				<span asp-validation-for="AppUser.LastName" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<input type="password" asp-for="password" class="form-control" autocomplete="new-password" aria-required="true" />
				<label>Lösenord</label>
			</div>
			@*<div class="col-md-4 col-md-offset-2">*@
				<div class="form-floating">
					<input type="password" asp-for="confirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
					<label>Upprepa lösenord</label>
				</div>
				<div class="form-floating">
					<input asp-for="AppUser.Address.Street" class="form-control" autocomplete="new-password" aria-required="true" />
					<label asp-for="AppUser.Address.Street">Adress</label>
					<span asp-validation-for="AppUser.Address.Street" class="text-danger"></span>
				</div>
				<div class="form-floating">
					<input asp-for="AppUser.Address.ZipCode" class="form-control" autocomplete="new-password" aria-required="true" />
					<label asp-for="AppUser.Address.ZipCode">Postnummer</label>
					<span asp-validation-for="AppUser.Address.ZipCode" class="text-danger"></span>
				</div>
				<div class="form-floating">
					<input asp-for="AppUser.Address.City" class="form-control" autocomplete="new-password" aria-required="true" />
					<label asp-for="AppUser.Address.City">Stad</label>
					<span asp-validation-for="AppUser.Address.City" class="text-danger"></span>
				</div>
				<button type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
			@*</div>*@
		</form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}