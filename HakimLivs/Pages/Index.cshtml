@page
@model IndexModel
@{
    ViewData["Title"] = "Hakim Livs!";
}

<div>
    <a asp-page="Products/Create">Lägg till ny produkt</a>
</div>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 justify-content-center">
    @foreach (var product in Model.Products)
    {
        <div class="col p-3">
            <div class="card h-100 text-center">
                <img src="@product.Image" class="card-img-top align-self-center p-3" style="height: 50%; width: 50%; object-fit: contain;" alt="@product.Name">
                <div class="card-body">
                    @if(product.DiscountPrice == null){
                        <h5 class="card-title">@product.Price.ToString().Replace(".", ",") kr</h5>
                    }
                    else
                    {
                        <h5 class="card-title">@product.DiscountPrice kr</h5>
                    }                    
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <a asp-page="./Products/Details" asp-route-id="@product.ID">@product.Name</a>
                         </li>
                        <li class="list-group-item">@product.Brand</li>
                        <li class="list-group-item">@($"{product.UnitValue}{product.UnitType}")</li>
                        @if(product.DiscountPrice != null)
                        {
                           <li class="list-group-item">@Utils.GetProductDiscountPercentage(product)%</li>
                        }
                    </ul>
                </div>
                <div class="card-footer">
                    <button type="button" onclick="addProductToLocalStorage(@product.ID)" class="btn btn-primary btn-block" style="width:100%;">Köp</button>
                </div>
            </div>
        </div>
    }
</div>

